{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="row">
    {% for livre in livres  %}


    <div class="col-4 mt-3">
        <div class="card">
        <img src={{ livre.image }} alt="image">
            <div class="card-body">
                <h4 class="card-title">{{ livre.libelle}} ({{ livre.prix}} DT)</h4>
                <H5>{{ livre.categorie.libelle }}</H5>
